<script>
  let AllData = {}
  let num=0;
  fetch("http://localhost:3001/api/users").then((data)=>{
    //console.log(data);
    return data.json(); // Converted to object
}).then((objectData)=>{
 //   console.log(objectData[0]);
    let tableData="";
